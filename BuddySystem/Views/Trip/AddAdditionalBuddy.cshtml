@model BuddySystem.Models.AddAdditionalBuddy

@{
    ViewBag.Title = "AddAdditionalBuddy";
}

<h2>GetAddAdditonalBuddyModel</h2>

<div>
    <h4>AddAdditionalBuddy</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TripId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TripId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PrimaryBuddyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrimaryBuddyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VolunteerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VolunteerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartLocation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartLocation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProjectedEndLocation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectedEndLocation)
        </dd>
    </dl>
    <div>
        @foreach (var buddy in ViewBag.ListOfAllBuddies)
        {
            <ul>
                <li>
                    @buddy.BuddyId , @buddy.Name
                </li>
            </ul>
        }
    </div>
    <!-- leaving ShowManager styling tags for now so we can reference & copy them if need be-->
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.TripId)

            <div class="form-group">
                @Html.LabelFor(model => model.BuddyToAddId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BuddyToAddId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BuddyToAddId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">

                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

            </div>
        }

        <div class="col-md-4 col-md-offset-2">
            <h4>Additional Buddy Line Up</h4>
            <ul id="artist_lineup">
            </ul>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TripId }) |
    @Html.ActionLink("Back to Trip", "Details", new { id = Model.TripId }) |

    @Html.ActionLink("Back to List", "Index")
</p>
